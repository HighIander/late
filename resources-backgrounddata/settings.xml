<settings>
	<setting propertyKey="@Properties.color" title="@Strings.ColorTitle">
		<settingConfig type="list">
			<listEntry value="0xFFAA00">@Strings.ColorYellow</listEntry>
			<listEntry value="0xFF5500">@Strings.ColorOrange</listEntry>
			<listEntry value="0x00AAFF">@Strings.ColorBlue</listEntry>
			<listEntry value="0x00AA00">@Strings.ColorDarkGreen</listEntry>
			<listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
			<listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
			<listEntry value="0xAA0000">@Strings.ColorDarkRed</listEntry>
			<listEntry value="0xAA00FF">@Strings.ColorPurple</listEntry>
			<listEntry value="0xFF00FF">@Strings.ColorPink</listEntry>
			<listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
			<listEntry value="0xAAAAAA">@Strings.ColorGray</listEntry>
			<listEntry value="0x555555">@Strings.ColorDarkGray</listEntry>
		</settingConfig>
	</setting>

	<setting propertyKey="@Properties.activity" title="@Strings.ActivityTitle">
		<settingConfig type="list">
			<listEntry value="0">@Strings.DnD</listEntry>
			<listEntry value="1">@Strings.Steps</listEntry>
			<listEntry value="2">@Strings.Calories</listEntry>
			<listEntry value="3">@Strings.ActiveMinutesDay</listEntry>
			<listEntry value="4">@Strings.ActiveMinutesWeek</listEntry>
			<listEntry value="5">@Strings.Floors</listEntry>
			<listEntry value="6">@Strings.Calendar</listEntry>
		</settingConfig>
	</setting>

	<setting propertyKey="@Properties.sunriset" title="@Strings.showSunriseSunsetTitle">
		<settingConfig type="boolean" />
	</setting>

	<setting propertyKey="@Properties.refresh_freq" title="@Strings.refreshFrequency">
		<settingConfig type="numeric" min="5" max="1440" />
	</setting>
</settings>